<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".EditDocActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_id"
                android:fontFamily="@font/convergence"
                android:gravity="start"
                android:padding="15dp"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/editID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/id_hint"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textColorHint="#8C8266"
                app:backgroundTint="@color/colorAccent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_welcome_message"
                android:fontFamily="@font/convergence"
                android:gravity="start"
                android:padding="15dp"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/editWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/welcome_hint"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textColorHint="#8C8266"
                app:backgroundTint="@color/colorAccent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_acknowledgments"
                android:fontFamily="@font/convergence"
                android:gravity="start"
                android:padding="15dp"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/editAck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ack_hint"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textColorHint="#8C8266"
                app:backgroundTint="@color/colorAccent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_nation_information"
                android:fontFamily="@font/convergence"
                android:gravity="start"
                android:padding="15dp"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/editInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/info_hint"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textColorHint="#8C8266"
                app:backgroundTint="@color/colorAccent" />
        </LinearLayout>
</ScrollView>